{% extends '@Dashify/layout.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <div class="container mx-auto px-6 py-8">
        <h3 class="text-3xl font-medium text-gray-700">Dashboard</h3>

        <div class="mt-8">
            <div class="grid gap-6 mb-8 md:grid-cols-2 xl:grid-cols-4">
                {% for resource in dashify_resources() %}
                    <div class="flex items-center p-4 bg-white rounded-lg shadow-xs">
                        <div class="p-3 mr-4 text-indigo-500 bg-indigo-100 rounded-full">
                            {% if resource.icon %}
                                <i class="{{ resource.icon }} w-5 h-5"></i>
                            {% else %}
                                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z"></path>
                                </svg>
                            {% endif %}
                        </div>
                        <div>
                            <p class="mb-2 text-sm font-medium text-gray-600">
                                {{ resource.pluralName }}
                            </p>
                            <p class="text-lg font-semibold text-gray-700">
                                <a href="{{ path('dashify_' ~ resource.name|lower ~ '_index') }}"
                                   class="text-indigo-600 hover:text-indigo-900">
                                    View all
                                </a>
                            </p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %} 